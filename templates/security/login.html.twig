{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey }}</div>
    {% endif %}

    <form method="post" class="wiki-form">
        <label for="username">Nom d'utilisateur</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required>

        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="_password" class="form-control" required />

        {# Pour lancer une redirection vers la route /account après une connexion réussie #}
        <input type="hidden" name="_target_path" value="/" />

        <button type="submit" class="">Connexion</button>
    </form>
{% endblock %}