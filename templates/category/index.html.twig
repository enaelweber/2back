{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories</h1>
    {{ include('category/create.html.twig') }}
    <h2>List of all categories</h2>
    <ul>
        {% for category in categories %}
            <li><a href="{{ path('show_category', {'name': category.name}) }}">{{ category.name }}</a></li>
        {% else %}
            <li>No category found.</li>
        {% endfor %}
    </ul>
{% endblock %}
